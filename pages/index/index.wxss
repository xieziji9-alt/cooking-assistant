/* 容器样式 */
.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 头部区域 */
.header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.stats {
  background: rgba(255, 255, 255, 0.2);
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.stats-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 功能卡片 */
.feature-cards {
  padding: 40rpx 30rpx;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  margin-top: 40rpx;
}

.feature-card {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.feature-card:active {
  transform: scale(0.98);
  border-color: #667eea;
}

.card-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.card-arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

/* 热门菜谱 */
.popular-section {
  padding: 40rpx 30rpx;
  background: white;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.popular-scroll {
  white-space: nowrap;
}

.popular-item {
  display: inline-block;
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  border-radius: 15rpx;
  padding: 25rpx;
  margin-right: 20rpx;
  width: 280rpx;
  border: 2rpx solid #ffcc02;
  vertical-align: top;
}

.popular-item:active {
  transform: scale(0.95);
}

.popular-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  white-space: normal;
}

.popular-info {
  margin-bottom: 10rpx;
}

.popular-time, .popular-difficulty {
  font-size: 22rpx;
  color: #666;
  margin-right: 15rpx;
}

.popular-category {
  background: #667eea;
  color: white;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  display: inline-block;
}

/* 统计信息 */
.stats-section {
  padding: 40rpx 30rpx;
  background: white;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);
  border-radius: 15rpx;
  padding: 25rpx 15rpx;
  border: 2rpx solid #4caf50;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #2e7d32;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #388e3c;
}

/* 快速开始 */
.quick-start {
  padding: 40rpx 30rpx 60rpx;
  background: white;
}

.quick-buttons {
  display: flex;
  gap: 20rpx;
}

.quick-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.quick-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.quick-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.quick-btn.secondary {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
}

.quick-btn.secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(40, 167, 69, 0.3);
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .quick-buttons {
    flex-direction: column;
  }
}
