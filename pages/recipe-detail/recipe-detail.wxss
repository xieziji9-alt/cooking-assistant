/* pages/recipe-detail/recipe-detail.wxss */
.container {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  min-height: 100vh;
  padding: 40rpx;
}

.header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.back-btn {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.recipe-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  display: block;
  margin-bottom: 20rpx;
}

.recipe-info {
  display: flex;
  justify-content: center;
  gap: 15rpx;
}

.info-tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.description-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.ingredients-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.ingredient-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 4rpx solid #4caf50;
}

.ingredient-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.ingredient-category {
  font-size: 22rpx;
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.cookware-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.cookware-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 4rpx solid #ff9800;
}

.cookware-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.cookware-type {
  font-size: 22rpx;
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.action-section {
  margin-top: 30rpx;
}

.video-btn {
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 107, 0.3);
}

.video-btn:active {
  transform: scale(0.98);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #666;
}

/* 空列表样式 */
.empty-list {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-text {
  color: #999;
}
