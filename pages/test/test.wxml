<view class="container">
  <view class="header">
    <text class="title">功能测试</text>
    <text class="subtitle">测试小程序各项功能</text>
  </view>

  <view class="test-results">
    <view wx:for="{{testResults}}" wx:key="name" class="test-item">
      <view class="test-name">{{item.name}}</view>
      <view class="test-status">{{item.status}}</view>
      <view class="test-detail">{{item.detail}}</view>
    </view>
  </view>

  <view class="nav-buttons">
    <button class="nav-btn" bindtap="goToHome">🏠 返回首页</button>
    <button class="nav-btn" bindtap="goToRandom">🎲 随机推荐</button>
    <button class="nav-btn" bindtap="goToIngredients">🥬 食材选择</button>
  </view>
</view>
